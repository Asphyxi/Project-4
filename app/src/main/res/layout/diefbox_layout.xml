<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:id="@+id/diefbox">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecteer een deelbuurt"
        android:id="@+id/diefboxSelectText"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10sp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/diefboxspinner"
        android:layout_below="@+id/diefboxSelectText"
        android:layout_alignParentStart="true"
        android:spinnerMode="dialog"
        android:clickable="true"
        android:background="@android:drawable/btn_dropdown"
        android:textAlignment="center"
        android:popupBackground="#afffffff"
        android:dropDownSelector="#000000"
        android:contextClickable="false" />

</RelativeLayout>